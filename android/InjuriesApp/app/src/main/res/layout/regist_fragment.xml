<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">
    <include layout="@layout/top_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lab_user_ame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:text="用户名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_query_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/lab_user_ame"
            android:layout_toRightOf="@+id/lab_user_ame"
            android:ems="10"
            android:inputType="textPersonName"
            android:imeOptions="flagNoExtractUi"
            android:text="" />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/txt_query_name"
            android:layout_toRightOf="@+id/txt_query_name"
            android:text="查询" />
    </RelativeLayout>

    <ListView
        android:id="@+id/user_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/regist_top_bg"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lab_register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:text="用户名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/lab_register_name"
            android:layout_toRightOf="@+id/lab_register_name"
            android:ems="10"
            android:inputType="textPersonName"
            android:imeOptions="flagNoExtractUi"
            android:text="" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/txt_register_name"
            android:layout_toRightOf="@+id/txt_register_name"
            android:text="注册" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_register_name"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="删除" />
    </RelativeLayout>
</LinearLayout>
