                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="伤口属性"
                        android:textSize="@dimen/rec_title_size" />
                </TableRow>

                <TableRow android:padding="10dp">

                    <RadioGroup
                        android:id="@+id/group_wound_prop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="1"
                            android:text="急性伤口"
                            android:textSize="@dimen/rec_title_size" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:tag="2"
                            android:text="慢性伤口"
                            android:textSize="@dimen/rec_title_size" />

                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/wound_ache_title"
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="伤口疼痛等级:"
                        android:textSize="@dimen/rec_title_size" />
                </TableRow>

                <TableRow android:padding="10dp">

                    <LinearLayout
                        android:layout_width="980dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/wound_ache"
                            android:layout_width="940dp"
                            android:layout_height="wrap_content"
                            android:longClickable="false"
                            android:max="10"
                            android:maxHeight="10dp"
                            android:minHeight="10dp"
                            android:progress="1"
                            android:thumb="@mipmap/seek_thumb_normal"
                            android:progressDrawable="@drawable/po_seekbar"

                            />

                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp">

                    <LinearLayout
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="6"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="7"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="8"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="9"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <!--
            <TableRow android:padding="10dp" android:layout_marginTop="20dp">

