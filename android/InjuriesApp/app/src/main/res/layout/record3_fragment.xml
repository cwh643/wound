<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:stretchColumns="1">

                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/record_wound_property"
                        android:textSize="@dimen/rec_title_size" />
                </TableRow>

                <TableRow android:padding="10dp">

                    <RadioGroup
                        android:id="@+id/group_wound_prop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="1"
                            android:text="@string/record_wound_acute"
                            android:textSize="@dimen/rec_title_size" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:tag="2"
                            android:text="@string/record_wound_chronic"
                            android:textSize="@dimen/rec_title_size" />

                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/wound_ache_title"
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/record_wound_grade"
                        android:textSize="@dimen/rec_title_size" />
                </TableRow>

                <TableRow android:padding="10dp">

                    <LinearLayout
                        android:layout_width="640dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/wound_ache"
                            android:layout_width="600dp"
                            android:layout_height="wrap_content"
                            android:longClickable="false"
                            android:max="10"
                            android:maxHeight="10dp"
                            android:minHeight="10dp"
                            android:progress="1"
                            android:thumb="@mipmap/seek_thumb_normal"
                            android:progressDrawable="@drawable/po_seekbar"

                            />

                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp">

                    <LinearLayout
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="6"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="7"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="8"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="9"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10"
                            android:textColor="@color/btn_title"
                            android:textSize="@dimen/rec_title_size" />

                    </LinearLayout>
                </TableRow>
            </TableLayout>
<!--
            <Button
                android:id="@+id/btn_step_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="下一步"
                android:textSize="@dimen/rec_title_size"
                android:visibility="gone" />
                -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
