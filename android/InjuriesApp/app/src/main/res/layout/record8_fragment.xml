<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:stretchColumns="1">
<!--
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:text="伤口换药"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </TableRow>
-->
                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/rec_title_size"
                        android:text="@string/record_wound_dressing" />
                </TableRow>
                <TableRow android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                        <Spinner
                            android:id="@+id/wound_dressing_type"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_spinner"
                            android:textSize="@dimen/rec_title_size"
                            android:dropDownHorizontalOffset="-10dp"
                            android:paddingLeft="-10dp"
                            android:dropDownVerticalOffset="0dp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/record_wound_dressing_name"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_dressing1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/record_wound_dressing_spec"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_dressing2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp">
                    <TextView
                        android:id="@+id/wound_dressing_desc"
                        android:layout_width="980dp"
                        android:layout_height="300dp"
                        android:textSize="@dimen/rec_title_size"
                        android:maxLines="15"
                        android:hint="@string/record_wound_dressing_desc"
                        />
                </TableRow>
            </TableLayout>
<!--
            <Button
                android:id="@+id/btn_step_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="@string/save" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
