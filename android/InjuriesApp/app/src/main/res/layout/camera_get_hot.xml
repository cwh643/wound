<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textview">

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textColor="#ffff0000" />

        <Button
            android:id="@+id/calibration_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_button"
            android:text="拍照"
            android:textColor="#ffff0000" />

        <Button
            android:id="@+id/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/calibration_button"
            android:text="gray"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/color_button"
            android:text="00.00"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_coor_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_textview"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/color_button"
            android:text="(000,\n 000)"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_rect_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/temperature_coor_textview"
            android:text="00.00"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_rect_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_rect_max"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/temperature_coor_textview"
            android:text="00.00"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_rect_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_rect_avg"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/temperature_coor_textview"
            android:text="00.00"
            android:textColor="#ffff0000" />

        <TextView
            android:id="@+id/temperature_rect_coor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_rect_min"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/temperature_coor_textview"
            android:text="(000, 000), \n(000, 000)"
            android:textColor="#ffff0000" />
    </RelativeLayout>
</RelativeLayout>