<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:stretchColumns="1">
                <!--
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:text="伤口基本信息"
                        android:textColor="@color/white"
                        android:textSize="@dimen/rec_title_size"
                        android:textStyle="bold" />
                </TableRow>
-->            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/lab_complains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="主    述"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/rec_title_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_record_mic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:drawablePadding="20dp"
                        android:drawableRight="@mipmap/stop"
                        android:text="录音"
                        android:textSize="@dimen/rec_title_size" />

                    <Button
                        android:id="@+id/btn_player_mic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="50dp"
                        android:background="@null"
                        android:drawablePadding="20dp"
                        android:drawableRight="@mipmap/play"
                        android:text="播放"
                        android:textSize="@dimen/rec_title_size" />
                </LinearLayout>
            </TableRow>

                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="伤口类型"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/rec_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/wound_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_spinner"
                            android:minWidth="180dp"
                            android:textSize="@dimen/rec_title_size"
                            android:dropDownHorizontalOffset="-5dp"
                            android:paddingLeft="-5dp"
                            android:dropDownVerticalOffset="0dp"/>

                        <EditText
                            android:id="@+id/wound_type_desc"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size"
                            android:visibility="invisible" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="伤口尺寸"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/rec_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="长"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_width"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:digits="1234567890."
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="宽"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_height"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:digits="1234567890."
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="深度"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_deep"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:digits="1234567890."
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />

                    </LinearLayout>

                </TableRow>

                <TableRow android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:digits="1234567890."
                            android:text="面积"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_area"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:digits="1234567890."
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="容积"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rec_title_size" />

                        <EditText
                            android:id="@+id/wound_volume"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:digits="1234567890."
                            android:hint=""
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />
                    </LinearLayout>

                </TableRow>

                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:text="形成时间"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/rec_title_size" />

                    <TextView
                        android:id="@+id/wound_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="@dimen/rec_title_size" />
                </TableRow>

                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="采取措施"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/rec_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/wound_measures"
                            android:background="@drawable/bg_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="240dp"
                            android:textSize="@dimen/rec_title_size"
                            android:dropDownHorizontalOffset="-5dp"
                            android:paddingLeft="-5dp"
                            android:dropDownVerticalOffset="0dp"/>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="伤口位置"
                        android:textSize="@dimen/rec_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="500dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@mipmap/position" />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_step_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/rec_title_size"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
