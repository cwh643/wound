                <TableRow android:padding="10dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/rec_title_size"
                        android:text="伤口的清洁程度" />

                </TableRow>
                <TableRow android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                    <RadioGroup
                        android:id="@+id/group_wound_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rec_title_size"
                            android:text="清洁伤口"
                            android:tag="1" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="污染伤口"
                            android:tag="2" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="感染伤口"
                            android:tag="3" />

                    </RadioGroup>

                        <EditText
                            android:id="@+id/wound_germs"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:hint="感染的细菌种类"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="10dp" android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/rec_title_size"
                        android:text="伤口的基底颜色" />
                </TableRow>
                <TableRow android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rec_title_size"
                            android:textColor="@color/black"
                            android:text="红色组织(%)" />

                        <EditText
                            android:id="@+id/wound_color_red"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi"
                            android:digits="1234567890."
                            android:textSize="@dimen/rec_title_size"
                            android:hint="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:textColor="@color/black"
                            android:text="黄色组织(%)" />

                        <EditText
                            android:id="@+id/wound_color_yellow"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi"
                            android:digits="1234567890."
                            android:textSize="@dimen/rec_title_size"
                            android:hint="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:textColor="@color/black"
                            android:text="黑色组织(%)" />

                        <EditText
                            android:id="@+id/wound_color_black"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="@dimen/rec_title_size"
                            android:digits="1234567890."
                            android:hint="" />
                    </LinearLayout>

                </TableRow>

                <TableRow android:padding="10dp" android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="@dimen/rec_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/rec_title_size"
                        android:text="伤口周围皮肤情况" />
                </TableRow>
                <TableRow android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="50dp">
                        <Spinner
                            android:id="@+id/group_wound_skin"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_spinner"
                            android:textSize="@dimen/rec_title_size"
                            android:dropDownHorizontalOffset="-50dp"
                            android:paddingLeft="-50dp"
                            android:dropDownVerticalOffset="0dp"/>
                    </LinearLayout>
                    <!--
                    <RadioGroup
                        android:id="@+id/group_wound_skin"
