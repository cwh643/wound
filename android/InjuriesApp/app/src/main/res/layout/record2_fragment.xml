                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="色素沉着"
                            android:tag="4" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rec_title_size"
                            android:text="水肿"
                            android:tag="5" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="坏死"
                            android:tag="6" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rec_title_size"
                            android:text="完好无损"
                            android:tag="7" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="青灰色"
                            android:tag="8" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="干燥起皮"
                            android:tag="9" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:textSize="@dimen/rec_title_size"
                            android:text="硬化结茧"
                            android:tag="10" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rec_title_size"
                            android:text="角化过度"
                            android:tag="11" />

                    </RadioGroup>
                    -->

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_step_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/rec_title_size"
                android:background="@null"
                android:text="下一步" />
        </LinearLayout>
</ScrollView>
</LinearLayout>
